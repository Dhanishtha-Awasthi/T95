<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_enter_records"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/enterrecords" />

    <TextView
        android:id="@+id/tv_enter_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_enter_records"
        android:layout_alignStart="@+id/iv_enter_records"
        android:layout_below="@+id/iv_enter_records"
        android:layout_marginTop="80dp"
        android:background="#bbdefb"
        android:text="Enter Records"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
         />



</LinearLayout>