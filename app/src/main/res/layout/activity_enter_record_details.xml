<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.dhanishthaawasthi.t95.EnterRecordDetails">



    <Button
        android:id="@+id/btn_verify_aadhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#bbdefb"
        android:text="Verify" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_yes"
        android:layout_alignStart="@+id/btn_yes"
        android:layout_below="@+id/btn_verify_aadhar"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif"
        android:text="Aadhar Verified Succesfully?"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#bbdefb"
        android:layout_margin="16dp"
        android:text="YES"
        />
    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#bbdefb"
        android:layout_margin="16dp"
        android:text="NO"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="250dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/aadhar" />


</RelativeLayout>
